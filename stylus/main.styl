// Reset
html,
body
    margin 0
    padding 0

h1, h2, h3, h4
    margin 0


// Variables Globales

// Estilos
// html,
// body
//     font-family 'Roboto', sans-serif

#app
    background #eee
    width 100vw
    height 100vh
    display none
    header 
        h1 
            text-align center
            font-weight 100
    .title
        text-align center
        margin 0px
    .body 
        display flex
        justify-content center 
        align-items center
        .form
            .timer
                display grid
                grid-template-columns auto auto auto auto
                max-width max-content
                margin 0 auto
                padding 50px 0px
                .grid-item
                    text-align center
                    font-weight 100
                    font-size 120px
                    @media screen and (max-width 950px)
                        font-size 80px
                    @media screen and (max-width 650px)
                        font-size 50px
                    @media screen and (max-width 350px)
                        font-size 30px
                    &.description
                        font-size 12px
            .buttons
                margin 0 auto 
                text-align center
